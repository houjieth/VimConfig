" Initializations

set showmatch

set hlsearch

set ignorecase

set incsearch

" Key mappings

"" cursor movement
map j gj
map k gk

nnoremap H 0
nnoremap L $

nnoremap dH d0
nnoremap dL d$

nnoremap yH y0
nnoremap yL y$

map <S-left> b
map <S-right> w

nnoremap , <C-d>
nnoremap . <C-u>

set clipboard+=unnamed
set ideajoin
